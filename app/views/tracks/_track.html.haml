%tr
  %td= track.artist_name
  %td= track.name
  %td= track.average_rating
  - if track.new_record?
  	-# create the track
  	%td
  		= form_for track do |f|
    		= f.submit
	- else
		- if current_user
			-# rate the track
			%td
				= render "ratings/form", target: Rating.find_or_initilize_by_track_id_and_user_id(track_id: track.id, user_id: current_user.id)
